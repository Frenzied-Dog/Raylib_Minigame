{
	// See https://code.visualstudio.com/docs/editor/tasks for more details
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build debug",
			"type": "process",
			"command": "make",
			"windows": {
				"command": "C:/MinGW64/bin/mingw32-make.exe",
				"args": [
					"debug"
				],
			},
			"osx": {
				"command": "/usr/bin/make",
				"args": [
					"debug"
				]
			},
			"linux": {
				"command": "/usr/bin/gcc",
				"args": [
					"debug"
				]
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "build release",
			"type": "process",
			"command": "make",
			"windows": {
				"command": "C:/MinGW64/bin/gcc.exe",
				"args": [
					"release"
				],
			},
			"osx": {
				"command": "/usr/bin/clang",
				"args": [
					"release"
				]
			},
			"linux": {
				"command": "/usr/bin/gcc",
				"args": [
					"release"
				]
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
			}
		}
	]
}
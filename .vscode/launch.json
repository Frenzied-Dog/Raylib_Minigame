{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/debug/main",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": false
				}
			],
			"windows": {
				"program": "${workspaceFolder}/build/debug/main.exe",
				"miDebuggerPath": "C:/MinGW64/bin/gdb.exe"
			},
			"osx": {
				"program": "${workspaceFolder}/build/debug/main_mac",
				"MIMode": "lldb"
			},
			"linux": {
				"program": "${workspaceFolder}/build/debug/main_linux",
				"miDebuggerPath": "/usr/bin/gdb"
			},
			"preLaunchTask": "build debug"
		},
		{
			"name": "Release",
			"type": "cppdbg",
			"request": "launch",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"program": "${workspaceFolder}/release/main",
			"MIMode": "gdb",
			"windows": {
				"program": "${workspaceFolder}/build/release/main.exe",
				"miDebuggerPath": "C:/MinGW64/bin/gdb.exe",
			},
			"osx": {
				"program": "${workspaceFolder}/build/release/main_mac",
				"MIMode": "lldb"
			},
			"linux": {
				"program": "${workspaceFolder}/build/release/main_linux",
				"miDebuggerPath": "/usr/bin/gdb"
			},
			"preLaunchTask": "build release",
		}
	]
}